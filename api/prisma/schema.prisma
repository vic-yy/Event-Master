generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId          Int       @id @default(autoincrement())
  name            String
  email           String    @unique
  password        String
  role            String
  token           String?
  tokenExpiration DateTime?
  participants    Participant[]
  user_groups     User_Group[]
}

model Event {
  eventId               Int      @id @default(autoincrement())
  title                 String
  description           String
  create_at             DateTime @default(now())
  location              String
  date                  DateTime  
  participants    	    Participant[]
  event_groups          Event_Group[]
}

model Participant {
  participantId   Int       @id @default(autoincrement())
  userId          Int
  eventId         Int
  email           String
  role            String

  user            User         @relation(fields: [userId, email], references: [userId, email], onDelete: Cascade)
  event           Event        @relation(fields: [eventId], references: [eventId], onDelete: Cascade)
  @@unique([userId, eventId, email])
}

model Group {
  groupId      Int      @id @default(autoincrement())
  title        String
  description  String
  user_groups  User_Group[]
  event_groups Event_Group[]
}

model User_Group {
  user_groupId  Int     @id @default(autoincrement())
  userId        Int
  groupId       Int
  email         String
  role          String

  user         User           @relation(fields: [userId, email], references: [userId, email], onDelete: Cascade)
  group        Group          @relation(fields: [groupId], references: [groupId], onDelete: Cascade)
  @@unique([userId, groupId, email])
}

model Event_Group {
  event_groupId  Int     @id @default(autoincrement())
  eventId        Int
  groupId        Int

  event        Event          @relation(fields: [eventId], references: [eventId], onDelete: Cascade)
  group        Group          @relation(fields: [groupId], references: [groupId], onDelete: Cascade)
  @@unique([eventId, groupId])
}
