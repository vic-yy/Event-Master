generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId          Int       @id @default(autoincrement())
  name            String
  email           String    @unique
  password        String
  role            String
  token           String?
  tokenExpiration DateTime?
  participants    Participant[]   @relation("UserToParticipant")
  user_groups     User_Group[]    @relation("UserToGroup")
  participants2   Participant[]   @relation("EmailToParticipant")
  user_groups2    User_Group[]    @relation("EmailToGroup")
}

model Event {
  eventId               Int      @id @default(autoincrement())
  title                 String
  description           String
  create_at             DateTime @default(now())
  location              String
  date                  DateTime  
  participants    	Participant[]
  event_groups          Event_Group[]
}

model Participant {
  participantId   Int       @id @default(autoincrement())
  userId          Int
  eventId         Int
  email           String
  role            String

  user            User     @relation(name: "UserToParticipant", fields: [userId], references: [userId], onDelete: Cascade)
  em              User     @relation(name: "EmailToParticipant", fields: [email], references: [email], onDelete: Cascade)
  event           Event    @relation(fields: [eventId], references: [eventId], onDelete: Cascade)
  @@unique([userId, eventId, email])
}

model Group {
  groupId      Int      @id @default(autoincrement())
  title        String
  description  String
  user_groups  User_Group[]
  event_groups Event_Group[]
}

model User_Group {
  user_groupId  Int     @id @default(autoincrement())
  userId        Int
  groupId       Int
  email         String
  role          String

  user          User     @relation(name: "UserToGroup", fields: [userId], references: [userId], onDelete: Cascade)
  em            User     @relation(name: "EmailToGroup", fields: [email], references: [email], onDelete: Cascade)
  group         Group          @relation(fields: [groupId], references: [groupId], onDelete: Cascade)
  @@unique([userId, groupId, email])
}

model Event_Group {
  event_groupId  Int     @id @default(autoincrement())
  eventId        Int
  groupId        Int

  event        Event          @relation(fields: [eventId], references: [eventId], onDelete: Cascade)
  group        Group          @relation(fields: [groupId], references: [groupId], onDelete: Cascade)
  @@unique([eventId, groupId])
}
